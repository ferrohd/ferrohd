{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        "config:recommended",
        ":rebaseStalePrs",
        ":enablePreCommit",
        ":semanticCommits"
    ],
    "dependencyDashboard": false,
    "automerge": true,
    "packageRules": [
        {
            "groupName": "Node Dependencies",
            "matchManagers": [
                "npm"
            ],
            "automerge": true
        },
        {
            "groupName": "GitHub Actions",
            "matchManagers": [
                "github-actions"
            ]
        }
    ],
    "vulnerabilityAlerts": {
        "semanticCommitType": "vuln",
        "minimumReleaseAge": "1 day",
        "internalChecksFilter": "strict",
        "addLabels": [
            "security"
        ]
    },
    "prConcurrentLimit": 0,
    "prHourlyLimit": 0
}
